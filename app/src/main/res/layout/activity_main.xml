<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linear_option"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/purple">

        <!-- Adicione os ImageViews ou outros elementos aqui dentro do LinearLayout -->
        <ImageView
            android:id="@+id/image_all"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_margin="12dp"
            android:src="@drawable/infiniti"
            app:tint = "#89201E1E"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/image_happy"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_margin="12dp"
            android:src="@drawable/happy_face"
            app:tint = "#89201E1E"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/image_shrine"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_margin="12dp"

            android:src="@drawable/shine_stars"
            app:tint = "#89201E1E"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_option"
        android:layout_marginTop="28dp"
        android:layout_centerInParent="true"
        android:fontFamily="@font/cabin"
        android:textSize="18sp"
        android:text="@string/hello_kotlin"/>

    <TextView
        android:id="@+id/text_motivation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:text="@string/app_name"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/cabin"
        android:textAlignment="center" />

    <View
        android:layout_width="128dp"
        android:layout_height="3dp"
        android:layout_below="@+id/text_motivation"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/dark_purple" />

    <Button
        android:id="@+id/button_new_phrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="38dp"
        android:backgroundTint="@color/dark_purple"
        android:fontFamily="@font/cabin"
        android:text="NOVA FRASE" />



</RelativeLayout>
